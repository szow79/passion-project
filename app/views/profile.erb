<!DOCTYPE html>
<html class='bg-color'>
<head>
</head>

<div class="container">

<body>

<!-- *****LOGOUT***** -->
<div class='row'>
  <div class='col-sm-3'>
  <h3>Welcome <b><%= @user.email %></b></h3>
    <nav>
      <form method='post' action='/users/<%= session[:user_id] %>'>
        <input class='btn-primary' type='submit' value='log out'>
      </form>
    </nav>
  </div>

<!-- *****ADD/MONITOR ITEM***** -->
  <article class='form-group move-d'>
    <form method='post' action='/users/<%= session[:user_id] %>/add'>
      <input class=' col-sm-7 ' type='text' name='url' placeholder='Paste URL'>
      <input class='col-sm-1 btn-primary' type='submit' value='Monitor it!'>
    </form>
  </article>
</div>
<hr>

<!-- *****LIST ITEMS***** -->
<div class='row'>
  <article>
    <% counter = 0 %>
    <% @items.each do |item| %>
    <% counter += 1 %>
      <%= erb :item, locals: {item_name: item.name, item_url: item.url, item_description: item.description, item_id: item.id, counter: counter} %>
      <hr>
    <% end %>

  </article>
</div>  
</div>


</body>

<footer>

</footer>

<!-- *****ADMIN BUTTON***** -->
<% if session[:user_id] == 1 %>
  <article>
    <form method='post' action='/record'>
      <input class='btn-danger' type='submit' value="Record Prices">
    </form>
  </article>
<% end %>
</html>